---
import Layout from '../../layouts/Layout.astro';
import InfoDespacho from '../../components/InfoDespacho.astro';
import ContentImageSplit from '../../components/ContentImageSplit.astro';
import t from '../../i18n/en.json';
---
<Layout title="About Me | Erika Morales" description="About Erika Morales - Attorney at Law" lang="en">
<div class="page-header">
    <div class="container">
      <h1>{t.aboutpage.title}</h1>
      <p class="intro">{t.aboutpage.intro}</p>
    </div>
  </div>

  <ContentImageSplit 
    title={t.aboutpage.philosophyTitle}
    imageSrc="/erika1_1.jpg"
    imageAlt="Imagen conceptual sobre la filosofía del despacho"
  >
    <p>{t.aboutpage.philosophyText}</p>
  </ContentImageSplit>

  <ContentImageSplit 
    title={t.aboutpage.experienceTitle}
    imageSrc="/erika2.jpg"
    imageAlt="Imagen conceptual sobre experiencia y dedicación"
    reverse={true}
  >
    <p>{t.aboutpage.experienceText}</p>
  </ContentImageSplit>

</Layout>