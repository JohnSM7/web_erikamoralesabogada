---
import Layout from '../../layouts/Layout.astro';
import InfoDespacho from '../../components/InfoDespacho.astro';
import ContentImageSplit from '../../components/ContentImageSplit.astro';
import t from '../../i18n/en.json';
---
<Layout title="Erika Morales | Lawyer" description="Professional legal services by Erika Morales" lang="en">
    <div class="hero">
        <div class="container">
            <h1>{t.homepage.heroTitle}</h1>
            <p>{t.homepage.heroSubtitle}</p>
            <a href={`/en/${t.slugs.contact}`} class="cta-button">{t.homepage.heroCta}</a>
        </div>
    </div>

    <section class="quote-section section">
        <div class="container">
            <h2>{t.introQuote.title}</h2>
            <blockquote>
                "{t.introQuote.quote}"
                <cite>– {t.introQuote.author}</cite>
            </blockquote>
        </div>
    </section>
    <InfoDespacho lang="es" />

    <ContentImageSplit 
        title={t.officeInfo2.title}
        imageSrc="/erika1.png"
        imageAlt="Erika Morales">
        <p set:html={t.officeInfo2.p2}></p>
    </ContentImageSplit>

    <ContentImageSplit 
        title={t.officeInfo3.title}
        imageSrc="/erika3.jpg"
        imageAlt="Imagen conceptual sobre experiencia y dedicación"
        reverse={true}
    >
        <p>{t.officeInfo3.p3}</p>
    </ContentImageSplit>

</Layout>

<style>
    .hero {
        background-color: var(--color-dark-blue);
        color: var(--color-white);
        padding: 6rem 0;
        text-align: center;
    }
    .hero h1 {
        color: var(--color-white);
        margin-bottom: 1.5rem;
    }
    .hero p {
        font-size: 1.2rem;
        max-width: 600px;
        margin: 0 auto 2rem auto;
    }
</style>