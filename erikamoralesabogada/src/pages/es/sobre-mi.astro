---
// src/pages/es/sobre-mi.astro (VERSIÓN FINAL CON EL COMPONENTE CORRECTO)
import Layout from '../../layouts/Layout.astro';
import ContentImageSplit from '../../components/ContentImageSplit.astro'; // <-- 1. Importamos el componente
import t from '../../i18n/es.json';
---

<Layout title="Sobre Mí | Erika Morales" 
description="Conoce a Erika Morales, abogada con sólida trayectoria en diversas áreas del derecho. Mi filosofía se basa en la confianza, transparencia y dedicación."
lang="es">

  <div class="page-header">
    <div class="container">
      <h1>{t.aboutpage.title}</h1>
      <p class="intro">{t.aboutpage.intro}</p>
    </div>
  </div>

  <ContentImageSplit 
    title={t.aboutpage.philosophyTitle}
    imageSrc="/erika2.jpg"
    imageAlt="Imagen conceptual sobre la filosofía del despacho"
  >
    <p>{t.aboutpage.philosophyText}</p>
  </ContentImageSplit>

  <ContentImageSplit 
    title={t.aboutpage.experienceTitle}
    imageSrc="https://placehold.co/600x400/D4AF37/FFFFFF/png?text=Experiencia"
    imageAlt="Imagen conceptual sobre experiencia y dedicación"
    reverse={true}
  >
    <p>{t.aboutpage.experienceText}</p>
  </ContentImageSplit>

</Layout>

<style>
  .page-header {
    background-color: var(--color-light-gray);
    padding: 3rem 0;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }
  .page-header .intro {
    max-width: 700px;
    margin: 1rem auto 0 auto;
    font-size: 1.15rem;
  }
</style>