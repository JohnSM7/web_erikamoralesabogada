---
// src/pages/fr/a-propos.astro (VERSIÓN FRANCÉS)
import Layout from '../../layouts/Layout.astro';
import ContentImageSplit from '../../components/ContentImageSplit.astro'; // <-- 1. Importamos el componente
import t from '../../i18n/fr.json';
---

<Layout title="À Propos de Moi | Erika Morales" 
description="Découvrez Erika Morales, avocate dotée d'une solide expérience dans divers domaines du droit. Ma philosophie repose sur la confiance, la transparence et le dévouement."
lang="fr">

  <div class="page-header">
    <div class="container">
      <h1>{t.aboutpage.title}</h1>
      <p class="intro">{t.aboutpage.intro}</p>
    </div>
  </div>

  <ContentImageSplit 
    title={t.aboutpage.philosophyTitle}
    imageSrc="/erika1_1.jpg"
    imageAlt="Image conceptuelle sur la philosophie du cabinet"
  >
    <p>{t.aboutpage.philosophyText}</p>
  </ContentImageSplit>

  <ContentImageSplit 
    title={t.aboutpage.experienceTitle}
    imageSrc="/erika2.jpg"
    imageAlt="Image conceptuelle sur l'expérience et le dévouement"
    reverse={true}
  >
    <p>{t.aboutpage.experienceText}</p>
  </ContentImageSplit>

</Layout>

<style>
  .page-header {
    background-color: var(--color-light-gray);
    padding: 3rem 0;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }
  .page-header .intro {
    max-width: 700px;
    margin: 1rem auto 0 auto;
    font-size: 1.15rem;
  }
</style>