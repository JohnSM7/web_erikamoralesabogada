---
import Layout from '../../layouts/Layout.astro';
import t from '../../i18n/fr.json';
---
<Layout 
    title="Contact | Erika Morales"
    description="Contactez Erika Morales Avocate pour une consultation juridique confidentielle. Trouvez mon téléphone, email et adresse à Fuengirola, Málaga."
    lang="fr"
>
  <div class="page-header">
    <div class="container">
      <h1>{t.contactpage.title}</h1>
      <p>{t.contactpage.subtitle}</p>
    </div>
  </div>

  <section class="section">
    <div class="container contact-grid">

      <form 
        action="https://formsubmit.co/erikamorales@icamalaga.org" 
        method="POST" 
        class="contact-form"
      >
        <div class="form-group">
          <label for="name">{t.contactpage.formName}</label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
          <label for="email">{t.contactpage.formEmail}</label>
          <input type="email" id="email" name="email" required>
        </div>
        <div class="form-group">
          <label for="message">{t.contactpage.formMessage}</label>
          <textarea id="message" name="message" rows="6" required></textarea>
        </div>

        <input type="hidden" name="_next" value="http://localhost:4321/fr/gracias"> 
        <input type="hidden" name="_subject" value="Nouveau Message du Site Web - Erika Morales Avocate">
        <input type="text" name="_honey" style="display:none">

        <button type="submit" class="cta-button">{t.contactpage.formSend}</button>
      </form>
      <div class="contact-info">
        <h3>{t.contactpage.infoTitle}</h3>
        <p><strong>Adresse :</strong><br>{t.contactpage.infoAddress}</p>
        <p><strong>Téléphone :</strong><br>{t.contactpage.infoPhone}</p>
        <p><strong>Email :</strong><br>erikamorales@icamalaga.org</p>
      </div>
    </div>
  </section>
</Layout>
<style>
  .page-header {
    background-color: var(--color-light-gray);
    padding: 3rem 0;
    text-align: center;
    border-bottom: 1px solid #ddd;
  }
   .page-header p {
    max-width: 600px;
    margin: 0 auto;
  }
  .contact-grid {
    display: grid;
    grid-template-columns: 2fr 1fr; /* Deux colonnes sur bureau */
    gap: 3rem;
  }
  .form-group {
    margin-bottom: 1.5rem;
  }
  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: bold;
  }
  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-family: inherit;
    font-size: 1rem;
  }
  .contact-info {
    background-color: var(--color-light-gray);
    padding: 2rem;
    border-radius: 5px;
  }
  .contact-info p {
    margin-bottom: 1rem;
  }

  /* --- CORRECTION POUR MOBILES --- */
  @media (max-width: 768px) {
    .contact-grid {
      /* On passe à une seule colonne */
      grid-template-columns: 1fr;
      /* On réduit l'espace entre les éléments */
      gap: 2.5rem;
    }
  }
</style>